<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_default"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@+id/viewPager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.631"
        app:tabBackground="@drawable/tab_selector"
        app:tabIndicator="@drawable/tab_indicator_selected"
        app:tabIndicatorColor="@color/colorPrimaryDark"
        app:tabIndicatorHeight="@dimen/margin_default" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="84dp"
        app:layout_constraintBottom_toBottomOf="@+id/tabLayout"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/btnSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_double"
        android:fontFamily="@font/montserrat"
        android:padding="@dimen/margin_default"
        android:text="Omitir"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnNextStarted"
        android:layout_width="312dp"
        android:layout_height="58dp"
        android:layout_margin="@dimen/margin_double"
        android:background="@drawable/shape_border_next"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:padding="@dimen/margin_default"
        android:paddingStart="@dimen/margin_quadra"
        android:paddingEnd="@dimen/margin_quadra"
        android:text="Siguiente"
        android:textColor="@color/colorPrimary"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/viewPager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btnGetStarted"
        android:layout_width="312dp"
        android:layout_height="58dp"
        android:layout_margin="@dimen/margin_double"
        android:background="@drawable/shape_border_welcome"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:padding="@dimen/margin_default"
        android:paddingStart="@dimen/margin_quadra"
        android:paddingEnd="@dimen/margin_quadra"
        android:text="Comenzar"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/viewPager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>